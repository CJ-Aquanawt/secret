<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<table>
<%= form_for :user, url:'/users/' do |f| %>
  <tr><td align="right">
  Email: <%= f.text_field :email %>
  </td></tr>
  <tr><td align="right">
  Name: <%= f.text_field :name %>
  </td></tr>
  <tr><td align="right">
  Password: <%= f.password_field :password %>
  </td></tr>
  <tr><td align="right">
  Password Confirmation: <%= f.password_field :password_confirmation %>
  </td></tr>
  <tr><td/><td align="right">
  <%= f.submit "Join" %>
  </td></tr>

<% end %>
</table>
